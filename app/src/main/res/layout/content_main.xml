<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/appbar_main"
    android:background="#511A52">>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Space
                    android:layout_width="123dp"
                    android:layout_height="10dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/icons_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_menu" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:clickable="false" />

                <ImageView
                    android:id="@+id/icons_mozilla"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_mozilla" />

                <Space
                    android:layout_width="19dp"
                    android:layout_height="match_parent" />

                <ImageView
                    android:id="@+id/icons_scribus"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_scribus" />

                <Space
                    android:layout_width="61dp"
                    android:layout_height="140dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icons_files"
                    android:layout_width="105dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_files" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_atom"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_atom" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_texteditor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_texteditor" />

                <Space
                    android:layout_width="72dp"
                    android:layout_height="140dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icons_terminal"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_terminal" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_gimp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_gimp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_packagemanager"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_packagemanager" />

                <Space
                    android:layout_width="72dp"
                    android:layout_height="140dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icons_vscode"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_vscode" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_inkscape"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_inkscape" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_settings"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_settings" />

                <Space
                    android:layout_width="72dp"
                    android:layout_height="140dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="109dp">

                <ImageView
                    android:id="@+id/icons_calculator"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_calculator" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="39dp" />

                <ImageView
                    android:id="@+id/icons_libreoffice"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_libreoffice" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/icons_mobile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:clickable="true"
                    app:srcCompat="@drawable/icons_mobile" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="120dp" />
            </TableRow>
        </TableLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>